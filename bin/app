#!/bin/bash 

# Check for electron and install it if need be
echo "Updating node modules"
npm update
echo "Checking for electron installed globally"
npm list -g electron || npm install -g electron
echo "creating the webform project in the public folder"
bin/cli --logSeverity=NONE --qType=quasarWebform --noPrompt=true --runAsProcess=true --outputFolder=./public --versionOutputFile=false
echo "Starting electron"
electron .