	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Watch Jobs",
			"protocol": "inspector",
			"program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
			"args": [
				"--watchJobs=true"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			"name": "Build",
			"program": "${workspaceFolder}/cli.js",
			"args": [
				"--dev=true",
				"--overwriteUnpackDestination=true"
			]
		}
	]
}